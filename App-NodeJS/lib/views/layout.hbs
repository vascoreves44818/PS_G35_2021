<meta charset="utf-8">
<html>
    <head>
        <title>Phyloviz</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
        </head>
    <body>

        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">PHYLOVIZ</span>
                <ul  class="nav nav-tabs" id="graphicTab" role="tablist" style="visibility: hidden">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#canvasGraph" type="button" role="tab" aria-controls="home" aria-selected="true">TREE</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profileTablePanel" type="button" role="tab" aria-controls="profile" aria-selected="false">PROFILE</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#auxTablePanel" type="button" role="tab" aria-controls="contact" aria-selected="false">COMPLEMENTARY</button>
                    </li>
                </ul>
                
                </div>
        </nav>
        <div class="messages"></div>

        

    
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Menu</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <!-- HOME BUTTON -->
                            <li class="nav-item">
                                <a href="/phyloviz/home"  class="nav-link text-white" aria-current="page">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
                                    <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z"/>
                                    <use xlink:href="/phyloviz/home"/>
                                </svg>
                                Home
                                </a>
                            </li>
                            <!-- INSERT TREE FORM -->
                            <li>
                                <a href="/phyloviz/home"  class="nav-link text-white" aria-current="page">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tree-fill" viewBox="0 0 16 16">
                                        <path d="M8.416.223a.5.5 0 0 0-.832 0l-3 4.5A.5.5 0 0 0 5 5.5h.098L3.076 8.735A.5.5 0 0 0 3.5 9.5h.191l-1.638 3.276a.5.5 0 0 0 .447.724H7V16h2v-2.5h4.5a.5.5 0 0 0 .447-.724L12.31 9.5h.191a.5.5 0 0 0 .424-.765L10.902 5.5H11a.5.5 0 0 0 .416-.777l-3-4.5z"/>
                                        <use xlink:href="/phyloviz/home"/>
                                    </svg>
                                Insert Tree:
                                </a>
                                <form method="GET" id="submitTree" action="/phyloviz/visualization" onsubmit="return validateTreeForm()">
                                    <div class="input-group mb-3">
                                        <input id="inputTree" name="tree" type="text" class="form-control" aria-label="Choose input type.">
                                        <button  type="submit" class="btn btn-LIGHT" >GO</button>
                                    </div>
                                </form>   
                            </li>
                            <!-- NEW DATASET -->
                            <li>
                                <div class=" d-flex mb-3">
                                    <a href="#"  class="nav-link text-white" aria-current="page">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                                            <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"/>
                                            <use xlink:href="#home"/>
                                        </svg>
                                    New Dataset:
                                    </a>
                                    <button class="btn btn-LIGHT dropdown-toggle" type="button" data-toggle="collapse" data-target="#collapsedGraphic" aria-expanded="false" aria-controls="collapsedGraphic">   
                                    </button>
                                </div>
                                <div class="collapse" id="collapsedGraphic">
                                    <div class="card text-white bg-dark mb-3 card-body">
                                        <!-- FILE READING FORM -->
                                        <form method="GET" id="formInputFile" action="/phyloviz/visualization/file">
                                            Dataset Name
                                            <div class="input-group mb-1">
                                                <input name="datasetname" class="form-control" type="text" id="inputDatasetName">  
                                            </div>
                                            Tree Data
                                            <div class="input-group mb-1">
                                                <input name="filename" class="form-control" type="file" id="inputFile">  
                                            </div>                                

                                            Profile Data
                                            <div class="input-group mb-1">
                                                <input name="profile" class="form-control" type="file" id="inputFile2">  
                                            </div> 

                                            Auxiliary Data
                                            <div class="input-group mb-2">
                                                <input name="auxiliary" class="form-control" type="file" id="inputFile3">  
                                            </div>  
                                            <!-- submit button --> 
                                            <div class="d-grid gap-2">
                                                <button id="submitFile"  type="submit" class="btn btn-LIGHT">GO</button>                             
                                            </div>
                                        </form>  
                                    </div>
                                </div>
                                    
                                    
                            </li>
                    
                            <li>
                                <a href="#" class="nav-link text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down-fill" viewBox="0 0 16 16">
                                    <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm2.354 6.854-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 9.293V5.5a.5.5 0 0 1 1 0v3.793l1.146-1.147a.5.5 0 0 1 .708.708z"/>
                                    <use xlink:href="#table"/>
                                </svg>
                                Load From Database
                                </a>
                            </li>
                            
                            <hr style="width:50%" size="3"  color="white"> 

                                <div class=" mb-3">

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-LIGHT" data-bs-toggle="modal" data-bs-target="#datasetInfo">
                                    DATASET INFO
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="datasetInfo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel" style="color: black;">DATASET INFO</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body" id="GraphicInfo">
                
                                            </div>
                                            <!--<div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div> -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="mb-3">
                                    <button class="btn btn-LIGHT" type="button" data-toggle="collapse" data-target="#collapsedGraphic" aria-expanded="false" aria-controls="collapsedGraphic">
                                        DATA FILTERS
                                    </button>
                                    <div class="collapse" id="collapsedGraphic">
                                        <div class="card card-body">
                                            SOME EXAMPLE N SHIT  
                                        </div>
                                    </div>
                                </div>  
                            </li>
                            
                            <li>
                                <div  >
                                    <button class="btn btn-LIGHT" type="button" data-toggle="collapse" data-target="#collapsedFilters" aria-expanded="false" aria-controls="collapsedFilters">
                                        GRAPHIC FILTERS
                                    </button>
                                        <div class="collapse" id="collapsedFilters">
                                            <div class="mt-3 form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="NodeLabels" checked>
                                                <label class="form-check-label" for="NodeLabels">Node Labels</label>
                                            </div>
                                        </div>
                                </div>  
                            </li>
                            
                            
                        </ul>
                        
                        
                        
                        

                    </div>
                </div>
                <div class="col py-3">
                    {{{body}}}
                </div>
                
            </div>
        </div>

    
        
    
    </body>
</html>