<div class="container-sm">
    <h1>Force Direct Visualization</h1>

    <form method="GET"> <!-- By default the request is made to the origin URL -->
        <div class="input-group mb-3">
            <input name="tree" type="text" class="form-control" id="inputFile" formaction="/phyloviz/visualization">
            <button formaction="/phyloviz/visualization" class="btn btn-primary" type="submit">Upload</button>
        </div>
    </form>
</div>
<div>
    <svg></svg>
</div>
<style>
    .nodes circle {
        cursor: pointer;
        stroke: #3182bd;
        stroke-width: 1.5px;
    }

    .nodes text {
        font: 10px sans-serif;
        pointer-events: none;
        text-anchor: middle;
    }

    .link line {
        fill: none;
        stroke: #9ecae1;
        stroke-width: 1.5px;
    }
</style>
<script src="https://d3js.org/d3.v6.min.js"></script>
<script id="forceDirectedLayout" type="text/javascript" src="/js/forceDirectLayout.js" tree={{{tree}}}></script>
