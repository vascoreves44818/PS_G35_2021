<script type="text/javascript" src="/js/checkInputs.js"></script>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active col py-3" id="canvasGraph" role="tabpanel" aria-labelledby="home-tab">
            <div style="display: flex;">
                <svg id="svgCanvas" ></svg>
                <div id="treeLabelsDiv" class="col-sm-5 form-control pieLabelRegion" overflow ="scroll" style="float: right; visibility: hidden;" >
                    <svg id="treeLabels" class="legend"></svg> 
                    <button type="button" class="btn btn-sm btn-outline-dark" onclick="removeNodePieCharts()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </button>
                </div>
               
            </div>
            
            <button id="pauseButton" type="button" class="btn btn-sm btn-outline-dark"  onclick="pauseSimulation()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pause" viewBox="0 0 16 16">
                    <path id="btn_pause_simulation" d="M6 3.5a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-1 0V4a.5.5 0 0 1 .5-.5zm4 0a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-1 0V4a.5.5 0 0 1 .5-.5z"/>
                    <path id="btn_continue_simulation" style="visibility: hidden;"  d="M10.804 8 5 4.633v6.734L10.804 8zm.792-.696a.802.802 0 0 1 0 1.392l-6.363 3.692C4.713 12.69 4 12.345 4 11.692V4.308c0-.653.713-.998 1.233-.696l6.363 3.692z"/>
                </svg>
            </button>
            <button type="button" class="btn btn-sm btn-outline-dark" id="btn_restart_simulation" onclick="restartSimulation()">
                 <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                </svg>
            </button>
           
             <button type="button" class="btn btn-sm btn-outline-dark" id="btn_save_state">SAVE
                 <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z"/>
                </svg>
                
            </button>
            <a id="downloadElem" style="display:none"></a>
            <input id="searchGraph" class="btn btn-sm btn-outline-dark" type="text" placeholder="Search Nodes" oninput="searchGraphByNode()"></input>
            

    </div>

    <div class="tab-pane fade" id="profileTablePanel" role="tabpanel" aria-labelledby="profile-tab">
        <div id="profileTabel"></div>
        <ul class="pagination justify-content-end">
            <li class="page-item ">
                <span id="pageProfile" class="page-link">1</span>
            </li>
            <li class="page-item">
                <a id="btn_prev_profile" class="page-link"  href="javascript:prevPageProfile()" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item mr-5">
                <a id="btn_next-profile" class="page-link" href="javascript:nextPageProfile()">Next</a>
            </li>      
        </ul>
        <div class="container row from-control" id="profilePieChartDiv"  style="visibility: hidden;"> 
            <div class="col-sm-5 pieRegion">
                <div id="profilePieChartTitle" class="form-control mb-2"></div>                
                <svg id="profilePieChartSVG" ></svg>
                <div class="mt-3">
                    <button type="button" class="btn btn-sm btn-outline-dark" onclick="cleanProfileKeys()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    </button>
                </div>
            
            </div>
            
            <div id="profilePieLabelsDiv" class="col-sm-5 form-control pieLabelRegion " overflow ="scroll" >
                <svg  id="profilePieLabels" class="legend" ></svg>     
            </div>
            
    
        </div>
       
    </div>
    <div class="tab-pane fade" id="auxTablePanel" role="tabpanel" aria-labelledby="aux-tab">
        <div id="auxTable">
        </div>
        <ul class="pagination justify-content-end">
            <li class="page-item">
                <span class="page-link" id="pageAux">1 </span>
            </li>
            <li class="page-item">
                <a id="btn_prev_aux" class="page-link"  href="javascript:prevPageAux()"  aria-disabled="true">Previous</a>
            </li>
            <li class="page-item">
                <a id="btn_next-aux" class="page-link" href="javascript:nextPageAux()">Next</a>
            </li>
        </ul>
        <div class="from-control container row" id="auxPieChartDiv" style="visibility: hidden;">
            <div class="col-sm-5 pieRegion" >
                <div id="auxPieChartTitle" class="form-control mb-2"></div>
                <svg id="auxPieChartSVG"></svg>
                <div class="mt-3">
                    <button type="button" class="btn btn-sm btn-outline-dark" id="linkToTreeBtn">LINK TO TREE</button>
                    <button type="button" class="btn btn-sm btn-outline-dark" onclick="cleanAuxKeys()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    </button>
                </div>
            </div>
            <div id="auxPieLabelsDiv" class="col-sm-5 form-control pieLabelRegion">
                <svg id="auxPieLabels" class="legend" ></svg>
                
            </div>
            

        </div>
        


    </div>

    
</div>

<style>

    .nodes circle {
        cursor: pointer;
        stroke: #3182bd;
        stroke-width: 1.5px;
    }

    .nodes text {
        fill: green;
        font: sans-serif;
        pointer-events: none;
        text-anchor:middle;
    }

    .link line {
        fill: #9ecae1;
        stroke: #9ecae1;
        stroke-width: 7px;
    }
    
    .link text {
        fill: hotpink;
        font: sans-serif;
        pointer-events: none;
        text-anchor:middle;
    }

    .nounderline {
        text-decoration: none 
    }

    .pieRegion{
        height: 300px;
        width: 300px;
        align-items: center;
    }
    

    .pieLabelRegion {
        height: 300px;
        width: 150px;
        overflow-y: scroll;
    }

    

</style>
